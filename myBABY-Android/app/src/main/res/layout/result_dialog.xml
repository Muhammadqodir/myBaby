<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:animateLayoutChanges="true"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="48dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/roud_rect"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="80dp"
                    android:id="@+id/ivIcon"
                    android:padding="12dp"
                    android:background="@drawable/ic_circle_white"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_hungry"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Hungry"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:id="@+id/tvResult"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="78%"
                        android:textSize="20dp"
                        android:id="@+id/tvAccuracy"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:text="Retreat with your baby to cuddle quietly, away from people and noise. Sucking on a pacifier also soothes, or you can try swaddling her in a light blanket so she feels safe and snug."
                android:textSize="16dp"
                android:gravity="left"
                android:id="@+id/tvSuggest"
                android:textStyle="bold"
                android:textColor="#c444"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</LinearLayout>
